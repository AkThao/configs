!! URxvt Appearance
!URxvt.font: xft:Droid Sans:style=Regular:size=8
URxvt.font: xft:bitstream vera sans mono:size=8
!URxvt.boldFont: xft:Droid Sans:style=Bold:size=8
!URxvt.italicFont: xft:Droid Sans:style=Italic:size=8
!URxvt.boldItalicFont: xft:Droid Sans:style=Bold Italic:size=8
URxvt.letterSpace: 1
URxvt.lineSpace: 1
URxvt.internalBorder: 5
URxvt.cursorBlink: true
URxvt.cursorUnderline: true
URxvt.saveline: 2048
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.urgentOnBell: true
URxvt.depth: 32
URxvt.iso14755: false

!! Common keybindings for navigation
! Scroll one line up
URxvt.keysym.Shift-Up: command:\033]720;1\007
! Scroll one line down
URxvt.keysym.Shift-Down: command:\033]721;1\007
! Jump to the next word
URxvt.keysym.Control-Right: \033[1;5C
! Jump to the previous word
URxvt.keysym.Control-Left: \033[1;5D

!! Copy/paste and other extensions
URxvt.perl-ext-common: default,keyboard-select
URxvt.keysym.M-s: perl:keyboard-select:search
URxvt.keysym.M-c: perl:keyboard-select:activate
URxvt.keyboard-select.clipboard: true

