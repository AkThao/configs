#!/usr/bin/env sh

# Positioning and sizing
spacebar -m config position		top
spacebar -m config height		30
spacebar -m config spacing_left		30
spacebar -m config spacing_right	40

# Fonts
#spacebar -m config text_font		"Andale Mono:Regular:14.0"
spacebar -m config text_font		"Arial Rounded MT Bold:Regular:14.0"
#spacebar -m config text_font		"Chalkboard SE:Light:14.0"
spacebar -m config icon_font		"Font Awesome 5 Free:Solid:14.0"

# Colours
spacebar -m config background_color  	0xff202020
spacebar -m config foreground_color  	0xffa8a8a8
spacebar -m config space_icon_color  	0xff366fd9
spacebar -m config power_icon_color  	0xffcd950c
spacebar -m config battery_icon_color	0xffd75f5f
spacebar -m config clock_icon_color  	0xff61bd48

# Data formats
spacebar -m config clock_format		"%a %d %b %H:%M"
spacebar -m config space_icon_strip	      
spacebar -m config space_icon		
spacebar -m config power_icon_strip      
spacebar -m config clock_icon           

echo "spacebar configuration loaded"
